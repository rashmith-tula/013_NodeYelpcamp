<!DOCTYPE html>
<html>
 <head>
    <title>YelpCamp</title> 
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
 </head>
 <body>
   <nav class="navbar navbar-dark bg-dark">
     <!--<div class="container-fluid">-->
      <a class="navbar-brand" href="/">YelpCamp</a>  
      <!--<div class="container">-->
       <ul class="nav justify-content-center">
         <% if(currentUser) { %>
          <li class="nav-item">
           <a class="nav-link clink" id="cuser" href="#"> Logged in as '<%= currentUser.username %>' </a>  
          </li>  
         <% } %>
       </ul>
       <ul class="nav justify-content-end">
         <% if(!currentUser) { %>
           <li class="nav-item">
             <a class="nav-link clink" id="signup" href="/signup"><i class="fa fa-user-plus"></i> Signup</a>  
           </li>
           <li class="nav-item">
             <a class="nav-link clink" id="login" href="/login"><i class="fa fa-sign-in"></i> Login</a>  
           </li> 
         <% } else { %>
           <li class="nav-item">
             <a class="nav-link clink" id="logout" href="/logout"><i class="fa fa-sign-out"></i> Logout</a>  
           </li> 
         <% } %>
       </ul>
      </div>
     </div>
   </nav>
   <br>
   <div class="container">
     <% if(success && success.length > 0) { %>
        <div class="alert alert-success" role="alert">
          <%= success %>
        </div>
     <% } %>
     <% if(error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
     <% } %>
   </div>   

   
