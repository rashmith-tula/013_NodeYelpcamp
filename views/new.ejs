<% include partials/header %>


    <div class="container" style="width: 60%; margin: 25px auto">
      <h3 class="text-center ch3">Create a New Campground</h3>
        <form action="/campgrounds" method="POST" class="nform">
          <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="Campground Name" required>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="Image URL" required>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="description" placeholder="Description">
          </div>
          <div class="form-group">
            <input class="form-control" type="number" name="price" placeholder="Price" min="0.10" step="0.10">
          </div>
          <input class="btn btn-primary btn-lg btn-block" type="submit" name="submit">
        </form>
        <div style="width: 25%; margin: 10px auto">
         <a class="btn btn-success btn-xs btn-block" style="margin: 10px auto" href="/campgrounds">Go back</a>
        </div>
    </div>

<% include partials/footer %>